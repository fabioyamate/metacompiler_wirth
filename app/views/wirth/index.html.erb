<%
@javascript_code = <<-JS
    <script type="text/javascript">
    $(document).ready(function() {
       $('h4').click(function() {
           $(this).next().toggle();
       });
    });
    </script>
JS
%>

<h1><a name="top">State Marker for Wirth Notation</a></h1>
<% form_tag do %>
	<%= label_tag(:wirth_notation, "Wirth Notation:") %><br/>
	<%= text_area_tag(:wirth_notation, @wirth_notation) %><br/>
	<%= submit_tag("Mark States") %>
<% end %>

<% if @wirth_notation %>
    <div id="wirth_state">
    	<h2>State</h2>
    	<ol>
    	<% @converted.each do |c| %>
    	<li><a href="#<%= c[:name] %>"><%= "<b>#{c[:name]}</b> = #{c[:stated]}." %></a></li>
    	<% end %>
    	</ol>
    </div>
    
    <h2>Automata</h2>
    <% @automatas.each do |n,a| %>
    <h3><a name="<%= n %>"><%= n %></a></h3>
    <div class="automatas">
        <h4>NFA <span>(Click to Show/Hide)</span></h4>
        <div style="display: none;">
            <pre>
<%=h a[:nfa] -%>
            </pre>
            <a href="#top">Topo</a>
        </div>

        <h4>DFA <span>(Click to Show/Hide)</span></h4>
        <div style="display: none;">
            <pre>
<%=h a[:dfa] -%>
            </pre>
            <a href="#top">Topo</a>    
        </div>
            <h4>Minimized DFA <span>(Click to Show/Hide)</span></h4>
        <div>
            <pre>
<%=h a[:minimized_dfa] -%>
            </pre>
            <a href="#top">Topo</a>
        </div>
        <h4>JFLAP <span>(Click to Show/Hide)</span></h4>
    <div style="display:none;">
        <pre>
<%=h a[:jflap] -%>
        </pre>
        <a href="#top">Topo</a>
    </div>
    </div>
    <% end %>
<% end %>